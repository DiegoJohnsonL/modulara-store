---
import { ModeToggle } from '@/components/color-mode-toggle';
import BaseLayout from '../layouts/BaseLayout.astro';
import '@/styles/globals.css'
import Scene from '@/components/scene';
---

<BaseLayout title="Welcome to Modulara">
	<main class="w-full min-h-screen flex flex-col relative">
		<div class="flex items-center justify-end top-10 right-5 absolute">
			<ModeToggle client:load/>
		</div>
		<Scene client:only="react" />
		<div id="section1">
			<h1 class="bg-green-100 h-screen text-2xl">SECTION 1</h1>
		</div>
		<div id="section2">
			<h1 class="bg-blue-100 h-screen text-2xl">SECTION 2</h1>
		</div>
		<div id="section3">
			<h1 class="bg-purple-100 h-screen text-2xl">SECTION 3</h1>
		</div>
		<div id="section4">
			<h1 class="bg-stone-200 h-screen text-2xl">SECTION 4</h1>
		</div>
		<div id="section5">
			<h1 class="bg-yellow-100 h-screen text-2xl">SECTION 5</h1>
		</div>
		<div id="section6">
			<h1 class="bg-black h-screen text-2xl">SECTION 6</h1>
		</div>
		<div id="section7">
			<h1 class="bg-white h-screen text-2xl">SECTION 6</h1>
		</div>
		
		
	</main>
</BaseLayout>