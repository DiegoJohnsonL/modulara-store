---
import { LOADER_DURATION } from "../lib/consts";
const animationDuration = (LOADER_DURATION + 1000) / 1000;
---

<div class="h-screen w-full grid place-content-center">
  <div class="cup">
    <span class="steam"></span>
    <span class="steam"></span>
    <span class="steam"></span>
    <div class="cup-handle"></div>
  </div>
</div>

<style>
  .cup {
    position: relative;
    width: 110px;
    height: 90px;
    border: 4px solid #f3eee6;
    box-shadow: 0 0 0 6px #352a22;
    border-radius: 5px 5px 30px 37px;
    background: url("/images/coffee.png");
    background-repeat: repeat-x;
    background-position: 0 65px;
    background-size: 100%;
    animation: filling 4s infinite;
  }

  @keyframes filling {
    0%,
    100% {
      background-position: 0 65px;
    }

    50% {
      background-position: 200px -15px;
    }
  }

  .cup .cup-handle {
    position: absolute;
    top: 5px;
    right: -37px;
    width: 32px;
    height: 60px;
    border: 6px solid #352a22;
    border-radius: 10px 5px 25px 10px;
  }

  .cup .steam {
    position: absolute;
    border-radius: 5px 1px;
    width: 4px;
    animation: steaming 2s infinite;
  }

  @keyframes steaming {
    0%,
    100% {
      opacity: 0;
    }

    50% {
      opacity: 1;
      filter: blur(0.8px);
      transform: translateY(-5px);
    }
  }

  .cup .steam:nth-child(1) {
    top: -35px;
    left: 32px;
    height: 15px;
    background: #8e5a3423;
    animation-delay: 0.2s;
  }

  .cup .steam:nth-child(2) {
    top: -60px;
    left: 47px;
    height: 25px;
    background: #8e5a3454;
    animation-delay: 0.6s;
  }

  .cup .steam:nth-child(3) {
    top: -45px;
    left: 62px;
    height: 20px;
    background: #8e5a3433;
    animation-delay: 1s;
  }
</style>
